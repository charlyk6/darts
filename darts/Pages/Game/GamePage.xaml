<Page x:Class="darts.Pages.Games.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:darts.Pages.Games"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1300"
      Title="darts" MouseDown="aimChange">
    <Page.Background>
        <ImageBrush ImageSource="/Resources/fon.jpg" Stretch="Fill" />
    </Page.Background>
    <Grid>
        <Image x:Name="target" HorizontalAlignment="left" Height="350" Margin="600,30,0,0" VerticalAlignment="Top" Width="350" Source="/Resources/target2.png" Loaded="start"/>

        <Image x:Name="powerGradient" HorizontalAlignment="Left" Height="49" Margin="942, 550, 0, 0" VerticalAlignment="Top" Width="350" Source="/Resources/gradient.png" MouseDown="powerClick"/>
        <Image x:Name="powerArrow" HorizontalAlignment="Left" Height="49" Margin="942, 550, 0, 0" VerticalAlignment="Top" Width="14" Source="/Resources/strelka.png" MouseDown="powerClick"/>

        <Image x:Name="cornerGradient" HorizontalAlignment="Left" Height="49" Margin="942, 618, 0, 0" VerticalAlignment="Top" Width="350" Source="/Resources/gradient.png" MouseDown="cornerClick"/>
        <Image x:Name="cornerArrow" HorizontalAlignment="Left" Height="49" Margin="942, 618, 0, 0" VerticalAlignment="Top" Width="14" Source="/Resources/strelka.png" MouseDown="cornerClick"/>

        <Image x:Name="drotik1" HorizontalAlignment="Left" Margin="600,90,0,0" Height="20" Width="20" VerticalAlignment="Top" Source="/Resources/drotik_textura.png" Visibility="Hidden" />
        <Image x:Name="drotik2" HorizontalAlignment="Left" Margin="600,100,0,0" Height="20" Width="20" VerticalAlignment="Top" Source="/Resources/drotik_textura.png" Visibility="Hidden"/>
        <Image x:Name="drotik3" HorizontalAlignment="Left" Margin="600,110,0,0" Height="20" Width="20" VerticalAlignment="Top" Source="/Resources/drotik_textura.png" Visibility="Hidden"/>

        <Button x:Name="throwButton" Content="Бросить" HorizontalAlignment="Left" Margin="942,686,0,0" VerticalAlignment="Top" Height="49" Width="350" Background="#FF87FF77" FontSize="16" Click="throwClick"/>
        <Label x:Name="ansLabel" Content="ansLabel" HorizontalAlignment="Left" Height="49" Margin="675,582,0,0" VerticalAlignment="Top" Width="136" Foreground="White" FontSize="22"/>
        <Image x:Name="aim" HorizontalAlignment="Left" Height="20" Margin="765,384,0,0" VerticalAlignment="Top" Width="20" Source="/Resources/drotik_textura.png"/>
    </Grid>
</Page>
